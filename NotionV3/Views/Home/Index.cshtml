@model System.Collections.Generic.List<DateBaseServices.DbModels.Note>


@{
    ViewBag.Title = "Home";
    Layout = "_Layout";
}

@if (Model.Any())
{
    foreach (var post in Model)
    {
        <div class="media text-muted pt-3">
            <img data-src="holder.js/32x32?theme=thumb&amp;bg=007bff&amp;fg=007bff&amp;size=1" alt="32x32" class="mr-2 rounded" style="width: 32px; height: 32px;" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%2232%22%20height%3D%2232%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%2032%2032%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_182639d1f04%20text%20%7B%20fill%3A%23007bff%3Bfont-weight%3Abold%3Bfont-family%3AArial%2C%20Helvetica%2C%20Open%20Sans%2C%20sans-serif%2C%20monospace%3Bfont-size%3A2pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_182639d1f04%22%3E%3Crect%20width%3D%2232%22%20height%3D%2232%22%20fill%3D%22%23007bff%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%2211.5390625%22%20y%3D%2216.9%22%3E32x32%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" data-holder-rendered="true">
            <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                <strong class="d-block text-gray-dark">@post.Title</strong>
                @post.Body
            </p>
        </div>
    }

    <button type="button" class="btn site-bg-blue text-white w-100" id="categoryCreateButton"><span class="feather-16" data-feather="plus-circle"></span> <span class="d-none d-xl-inline">Создать</span></button>

}


@section SectionsActionsDialog
{
<div class="modal fade" id="categoryEditDialog" tabindex="-1" role="dialog" aria-labelledby="categoryEditDialogTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="categoryEditDialogTitle">Пост</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-controller="Home" asp-action="AddCategory" enctype="multipart/form-data" method="POST">
                <div class="modal-body">
                        <input type="hidden" class="form-control" id="categoryId" name="categoryId" value="">
                    <div class="form-group">
                        <label for="categoryTitle">Название категории</label>
                        <input type="text" class="form-control" id="categoryTitle" name="categoryTitle" placeholder="Введите название статьи">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn site-bg-blue text-white">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>

}